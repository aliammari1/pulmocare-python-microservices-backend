{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Medecins Service",
            "type": "debugpy",
            "request": "launch",
            "program": "app.py",
            "cwd": "${workspaceFolder}/services/medecins/app",
            "console": "integratedTerminal",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/services/medecins/.venv",
                "PATH": "${workspaceFolder}/services/medecins/.venv/Scripts:${env:PATH}",
                "PYTHONPATH": "${workspaceFolder}/services/medecins:${env:PYTHONPATH}"
            },
            "justMyCode": false
        },
