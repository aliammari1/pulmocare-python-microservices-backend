# {{ service_description }}
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ service_name }}-service
  namespace: medapp
  labels:
    app: {{ service_name }}-service
    component: backend
    tier: service
spec:
  replicas: {{ default_replicas }}
  selector:
    matchLabels:
      app: {{ service_name }}-service
  template:
    metadata:
      labels:
        app: {{ service_name }}-service
        component: backend
        tier: service
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "{{ metrics_port }}"
        prometheus.io/path: "/metrics"
    spec:
      containers:
        - name: {{ service_name }}-service
          image: {{ docker_registry }}/medapp-{{ service_name }}:{{ docker_image_tag }}
          imagePullPolicy: Always
          ports:
            - name: http
              containerPort: {{ service_port }}
              protocol: TCP
            - name: metrics
              containerPort: {{ metrics_port }}
              protocol: TCP
          env:
            - name: ENV
              value: "{{ ansible_deployment_env | default('production') }}"
            - name: PORT
              value: "{{ service_port }}"
            - name: METRICS_PORT
              value: "{{ metrics_port }}"
            - name: OTEL_SERVICE_NAME
              value: "{{ service_name }}-service"
            - name: OTEL_RESOURCE_ATTRIBUTES
              value: "service.name={{ service_name }}-service,deployment.environment={{ ansible_deployment_env | default('production') }}"
            - name: OTEL_EXPORTER_OTLP_ENDPOINT
              value: "http://otel-collector:4318"
            # Database configuration
            - name: MONGODB_HOST
              value: "mongodb"
            - name: MONGODB_PORT
              value: "27017"
            - name: MONGODB_DATABASE
              value: "pulmocare"
            - name: MONGODB_USERNAME
              valueFrom:
                secretKeyRef:
                  name: mongodb-secret
                  key: username
            - name: MONGODB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: mongodb-secret
                  key: password
            # Redis configuration
            - name: REDIS_HOST
              value: "redis"
            - name: REDIS_PORT
              value: "6379"
            - name: REDIS_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: redis-secret
                  key: password
            # RabbitMQ configuration
            - name: RABBITMQ_HOST
              value: "rabbitmq"
            - name: RABBITMQ_PORT
              value: "5672"
            - name: RABBITMQ_USERNAME
              valueFrom:
                secretKeyRef:
                  name: rabbitmq-secret
                  key: username
            - name: RABBITMQ_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: rabbitmq-secret
                  key: password
            # Consul configuration
            - name: CONSUL_HOST
              value: "consul"
            - name: CONSUL_PORT
              value: "8500"
            - name: CONSUL_HTTP_TOKEN
              valueFrom:
                secretKeyRef:
                  name: consul-secret
                  key: token
                  optional: true
            # Authentication configuration
            - name: AUTH_SERVICE_URL
              value: "http://auth-service:8086"
            - name: KEYCLOAK_SERVER_URL
              value: "http://keycloak:8080"
            - name: KEYCLOAK_REALM
              value: "pulmocare"
            - name: KEYCLOAK_CLIENT_ID
              value: "medapp-client"
            - name: KEYCLOAK_CLIENT_SECRET
              valueFrom:
                secretKeyRef:
                  name: keycloak-secret
                  key: client-secret
                  optional: true
            # Feature flags
            - name: ENABLE_AUTHENTICATION
              value: "true"
            - name: ENABLE_METRICS
              value: "true"
            - name: ENABLE_TRACING
              value: "true"
            - name: ENABLE_CACHING
              value: "true"
          resources:
            requests:
              memory: "128Mi"
              cpu: "100m"
            limits:
              memory: "512Mi"
              cpu: "500m"
          livenessProbe:
            httpGet:
              path: /api/v1/health/live
              port: http
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            httpGet:
              path: /api/v1/health/ready
              port: http
            initialDelaySeconds: 5
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 3
          securityContext:
            runAsNonRoot: true
            runAsUser: 1000
            readOnlyRootFilesystem: false
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - ALL
      restartPolicy: Always
      securityContext:
        fsGroup: 1000
---
apiVersion: v1
kind: Service
metadata:
  name: {{ service_name }}-service
  namespace: medapp
  labels:
    app: {{ service_name }}-service
    component: backend
    tier: service
  annotations:
    service.alpha.kubernetes.io/tolerate-unready-endpoints: "true"
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: http
      protocol: TCP
    - name: metrics
      port: {{ metrics_port }}
      targetPort: metrics
      protocol: TCP
  selector:
    app: {{ service_name }}-service
---
# ServiceMonitor for Prometheus
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: {{ service_name }}-service
  namespace: medapp
  labels:
    app: {{ service_name }}-service
    component: backend
    tier: service
spec:
  selector:
    matchLabels:
      app: {{ service_name }}-service
  endpoints:
    - port: metrics
      path: /metrics
      interval: 30s
      scrapeTimeout: 10s
---
# HorizontalPodAutoscaler
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: {{ service_name }}-service-hpa
  namespace: medapp
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: {{ service_name }}-service
  minReplicas: {{ default_replicas }}
  maxReplicas: 10
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: 80
