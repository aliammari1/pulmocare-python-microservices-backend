# Development Environment Configuration for {{ service_description }}

# Service Configuration
ENV=development
HOST=0.0.0.0
PORT={{ service_port }}
METRICS_PORT={{ metrics_port }}

# CORS Configuration
CORS_ORIGINS=*

# Security
SECRET_KEY=dev-secret-key-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=DEBUG

# Service Discovery - Consul
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_HTTP_TOKEN=

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin
MONGODB_DATABASE=pulmocare
MONGODB_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=60000
MONGODB_CONNECT_TIMEOUT_MS=5000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redispass
REDIS_MAX_CONNECTIONS=50
REDIS_RETRY_ON_TIMEOUT=true

# Message Queue - RabbitMQ  
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# OpenTelemetry
OTEL_SERVICE_NAME={{ service_name }}-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_RESOURCE_ATTRIBUTES=service.name={{ service_name }}-service

# Authentication Service
AUTH_SERVICE_URL=http://localhost:8086

# Keycloak
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=pulmocare
KEYCLOAK_CLIENT_ID=medapp-client
KEYCLOAK_CLIENT_SECRET=

# Feature Flags
ENABLE_AUTHENTICATION=false
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_CACHING=true
