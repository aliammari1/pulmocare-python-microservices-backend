# Production Environment Configuration for MedApp Backend

# Service info
ENV=production
SERVICE_NAME=ordonnances-service
VERSION=1.0.0
PORT=8082

# Server settings
HOST=0.0.0.0

# Service Discovery settings
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_HTTP_TOKEN=

# MongoDB settings
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin
MONGODB_DATABASE=medapp
MONGODB_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=20
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_CONNECT_TIMEOUT_MS=3000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=3000

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redispass

# RabbitMQ settings
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/

# Logging settings
LOG_LEVEL=DEBUG
LOG_DIR=/app/logs
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10

# Monitoring settings
METRICS_PORT=9092
ENABLE_METRICS=True

# Tracing settings
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_DISABLE_ON_ERROR=False

# Circuit Breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Health Check settings
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=3s
HEALTH_CHECK_DEREGISTER_TIMEOUT=30s

# Cache settings
CACHE_TTL=600
CACHE_MAX_SIZE=5000

# Rate limiting
RATE_LIMIT_DEFAULT=30 per minute

# Application specific configuration
PDF_EXPORT_PATH=/app/exports
MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=15

# Security configuration (use secure values in production!)
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_VALUE_IN_PRODUCTION
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_VALUE_IN_PRODUCTION
JWT_ACCESS_TOKEN_EXPIRES=1800
JWT_REFRESH_TOKEN_EXPIRES=604800
