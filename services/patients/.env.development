# Development Environment Configuration for MedApp Backend

# Service info
ENV=development
SERVICE_NAME=patients-service
VERSION=1.0.0
PORT=8083

# Server settings
HOST=0.0.0.0

# Service Discovery settings
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_HTTP_TOKEN=

# MongoDB settings
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin
MONGODB_DATABASE=medapp
MONGODB_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=60000
MONGODB_CONNECT_TIMEOUT_MS=5000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redispass

# RabbitMQ settings
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/

# Logging settings
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring settings
METRICS_PORT=9090
ENABLE_METRICS=True

# Tracing settings
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_DISABLE_ON_ERROR=True

# Circuit Breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Health Check settings
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_DEREGISTER_TIMEOUT=30s

# Cache settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_DEFAULT=60 per minute

# Application specific configuration
PDF_EXPORT_PATH=./tmp/exports
MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=30

# Security configuration (use secure values in production!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
